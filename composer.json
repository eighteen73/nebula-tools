{
  "name": "eighteen73/nebula-tools",
  "description": "A library of tools for Nebula WordPress websites.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Ed Jeavons",
      "email": "ed@orphans.co.uk"
    },
    {
      "name": "Brett Mason",
      "email": "brett@orphans.co.uk"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.0",
    "ext-json": "*"
  },
  "require-dev": {
    "eighteen73/wordpress-coding-standards": "^2.0.0"
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "psr-4": {
      "Eighteen73\\NebulaTools\\": "includes/classes/"
    }
  },
  "scripts": {
    "test": [
      "phpcs"
    ]
  }
}
